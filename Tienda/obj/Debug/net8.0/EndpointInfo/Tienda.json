          }
        },
        "additionalProperties": false
      },
      "Product": {
        "required": [
          "description",
          "imageUrl",
          "name",
          "price"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "imageUrl": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProductPagedResult": {
        "type": "object",
